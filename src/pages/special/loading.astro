---
import Layout from "./_layout.astro";
import { GoodbyeInfo, LoadingInfo } from "./_widgets";
---

<Layout>
  <div class="window">
    <div class="window-title">Minteea 2024</div>
    <div class="window-content">
      <div class="scene-background"></div>
      <div class="loading-info" style={{ width: "100%" }}>
        <LoadingInfo client:only />
      </div>
    </div>
  </div>
</Layout>

<style is:global>
  .window {
    width: 100%;
    height: 100%;
    position: relative;
    border: 5px solid var(--window-color, white);
    box-sizing: border-box;
  }
  .window-title {
    height: 30px;
    background-color: var(--window-color, white);
    color: var(--window-text-color, black);
    font-size: 20px;
    line-height: 25px;
  }
  .window-content {
    height: calc(100% - 30px);
  }
  .loading-info {
    position: absolute;
    height: 50px;
    font-size: 40px;
    font-weight: 600;
    bottom: 0;
    text-shadow: 3px 3px #40404080;
  }
  .loading-info .marquee-item::after {
    content: "Ôºè";
    display: inline-block;
    padding: 0 10px;
  }
  .scene-background {
    height: 100%;
    background: var(--scene-background);
    background-size: cover;
  }
</style>
